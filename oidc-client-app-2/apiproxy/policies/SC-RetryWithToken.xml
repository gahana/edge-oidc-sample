<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ServiceCallout async="false" continueOnError="false" enabled="true" name="SC-RetryWithToken">
    <DisplayName>SC-RetryWithToken</DisplayName>
    <FaultRules/>
    <Properties/>
    <Request clearPayload="true" variable="myRequest">
        <Set>
            <Headers>
                <Header name="Authorization">Bearer {oidc.id_token}</Header>
            </Headers>
            <Verb>GET</Verb>
        </Set>
        <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
    </Request>
    <Response>response</Response>
    <HTTPTargetConnection>
        <Properties/>
        <URL>https://{oidc.resource_host}/{oidc.resource_path}</URL>
    </HTTPTargetConnection>
</ServiceCallout>