<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <Flows>
        <Flow name="Authorize">
            <Description/>
            <Request/>
            <Response>
                <Step>
                    <FaultRules/>
                    <Name>AM-GoLogin</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/authorize") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="AuthCode">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>OA-AuthCode</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-SendAuthCode</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/authcode") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="Token">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>OA-AccessToken</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>JC-JWTGenerate</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-SendToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/token") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>JS-SetConfig</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/oidc-sample/oidc</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="noroute"/>
</ProxyEndpoint>